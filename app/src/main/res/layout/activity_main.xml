<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:gravity="bottom"
        android:background="@color/first_row"
        android:orientation="horizontal">

        <Button
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/first_row"
            android:text="A"
            android:textColor="@color/black"
            app:backgroundTint="@color/first_row" />

        <Button
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/first_row"
            android:text="B"
            android:textColor="@color/black"
            app:backgroundTint="@color/first_row" />

        <Button
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/first_row"
            android:text="C"
            android:textColor="@color/black"
            app:backgroundTint="@color/first_row" />

        <Button
            android:id="@+id/d"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/first_row"
            android:text="D"
            android:textColor="@color/black"
            app:backgroundTint="@color/first_row" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@color/second_row"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/e"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="E"
            android:textColor="@color/black"
            app:backgroundTint="@color/second_row" />

        <Button
            android:id="@+id/f"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="F"
            android:textColor="@color/black"
            app:backgroundTint="@color/second_row" />

        <Button
            android:id="@+id/g"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="G"
            android:textColor="@color/black"
            app:backgroundTint="@color/second_row" />

        <Button
            android:id="@+id/h"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="H"
            android:textColor="@color/black"
            app:backgroundTint="@color/second_row" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@android:color/holo_orange_dark"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/i"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="I"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_orange_dark" />

        <Button
            android:id="@+id/j"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="J"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_orange_dark" />

        <Button
            android:id="@+id/k"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="K"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_orange_dark" />

        <Button
            android:id="@+id/l"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="L"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_orange_dark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@android:color/holo_purple"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/m"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="M"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_purple" />

        <Button
            android:id="@+id/n"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="N"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_purple" />

        <Button
            android:id="@+id/o"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="O"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_purple" />

        <Button
            android:id="@+id/p"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="P"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_purple" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@color/teal_200"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/q"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Q"
            android:textColor="@color/black"
            app:backgroundTint="@color/teal_200" />

        <Button
            android:id="@+id/r"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="R"
            android:textColor="@color/black"
            app:backgroundTint="@color/teal_200" />

        <Button
            android:id="@+id/s"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="S"
            android:textColor="@color/black"
            app:backgroundTint="@color/teal_200" />

        <Button
            android:id="@+id/t"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="T"
            android:textColor="@color/black"
            app:backgroundTint="@color/teal_200" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@android:color/holo_green_light"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/u"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="U"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_green_light" />

        <Button
            android:id="@+id/v"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="V"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_green_light" />

        <Button
            android:id="@+id/w"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="W"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_green_light" />

        <Button
            android:id="@+id/x"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="X"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_green_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teal_700"
        android:baselineAligned="false"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/y"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Y"
            android:textColor="@color/black"
            app:backgroundTint="@color/teal_700" />

        <Button
            android:id="@+id/z"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Z"
            android:textColor="@color/black"
            app:backgroundTint="@color/teal_700" />
    </LinearLayout>
</LinearLayout>
