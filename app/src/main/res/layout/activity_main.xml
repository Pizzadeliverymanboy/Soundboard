<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:gravity="bottom"
        android:background="@color/first_row"
        android:orientation="horizontal">

        <Button
            android:id="@+id/A"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/first_row"
            android:text="A"
            android:textColor="@color/black"
            app:backgroundTint="@color/first_row" />

        <Button
            android:id="@+id/B"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/first_row"
            android:text="B"
            android:textColor="@color/black"
            app:backgroundTint="@color/first_row" />

        <Button
            android:id="@+id/C"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/first_row"
            android:text="C"
            android:textColor="@color/black"
            app:backgroundTint="@color/first_row" />

        <Button
            android:id="@+id/D"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/first_row"
            android:text="D"
            android:textColor="@color/black"
            app:backgroundTint="@color/first_row" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@color/second_row"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/E"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="E"
            android:textColor="@color/black"
            app:backgroundTint="@color/second_row" />

        <Button
            android:id="@+id/F"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="F"
            android:textColor="@color/black"
            app:backgroundTint="@color/second_row" />

        <Button
            android:id="@+id/G"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="G"
            android:textColor="@color/black"
            app:backgroundTint="@color/second_row" />

        <Button
            android:id="@+id/H"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="H"
            android:textColor="@color/black"
            app:backgroundTint="@color/second_row" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@android:color/holo_orange_dark"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/I"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="I"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_orange_dark" />

        <Button
            android:id="@+id/J"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="J"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_orange_dark" />

        <Button
            android:id="@+id/K"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="K"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_orange_dark" />

        <Button
            android:id="@+id/L"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="L"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_orange_dark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@android:color/holo_purple"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/M"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="M"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_purple" />

        <Button
            android:id="@+id/N"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="N"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_purple" />

        <Button
            android:id="@+id/O"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="O"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_purple" />

        <Button
            android:id="@+id/P"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="P"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_purple" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@color/teal_200"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Q"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Q"
            android:textColor="@color/black"
            app:backgroundTint="@color/teal_200" />

        <Button
            android:id="@+id/R"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="R"
            android:textColor="@color/black"
            app:backgroundTint="@color/teal_200" />

        <Button
            android:id="@+id/S"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="S"
            android:textColor="@color/black"
            app:backgroundTint="@color/teal_200" />

        <Button
            android:id="@+id/T"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="T"
            android:textColor="@color/black"
            app:backgroundTint="@color/teal_200" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@android:color/holo_green_light"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/U"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="U"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_green_light" />

        <Button
            android:id="@+id/V"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="V"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_green_light" />

        <Button
            android:id="@+id/W"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="W"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_green_light" />

        <Button
            android:id="@+id/X"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="X"
            android:textColor="@color/black"
            app:backgroundTint="@android:color/holo_green_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teal_700"
        android:baselineAligned="false"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Y"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Y"
            android:textColor="@color/black"
            app:backgroundTint="@color/teal_700" />

        <Button
            android:id="@+id/Z"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Z"
            android:textColor="@color/black"
            app:backgroundTint="@color/teal_700" />
    </LinearLayout>
</LinearLayout>
